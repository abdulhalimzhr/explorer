# Frontend Environment Variables Example
# Copy this file to .env and update the values

# API Configuration
NUXT_PUBLIC_API_BASE=http://localhost:3001
NUXT_PUBLIC_API_VERSION=v1

# App Configuration
NUXT_PUBLIC_APP_NAME=Explorer
NUXT_PUBLIC_APP_VERSION=1.0.0

# Development Configuration
NUXT_HOST=localhost
NUXT_PORT=3000

# Feature Flags
NUXT_PUBLIC_ENABLE_DARK_MODE=true
NUXT_PUBLIC_ENABLE_FILE_UPLOAD=true
NUXT_PUBLIC_ENABLE_SEARCH=true

# File Configuration
NUXT_PUBLIC_MAX_FILE_SIZE=10485760
NUXT_PUBLIC_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.txt,.doc,.docx,.xls,.xlsx

# UI Configuration
NUXT_PUBLIC_ITEMS_PER_PAGE=50
NUXT_PUBLIC_ENABLE_ANIMATIONS=true

# Analytics (optional)
# NUXT_PUBLIC_GOOGLE_ANALYTICS_ID=
# NUXT_PUBLIC_HOTJAR_ID=